<configuration>
  <appender name="stderrColor" class="ch.qos.logback.core.ConsoleAppender">
    <target>System.err</target>
    <encoder>
      <pattern>%green(%date) %blue([){}%cyan(%thread){}%blue(]) %highlight(%-5level) %logger{15}: %msg%n</pattern>
    </encoder>
  </appender>
  <root level="ALL">
    <appender-ref ref="stderrColor" />
  </root>
</configuration>
